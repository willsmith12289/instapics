<section class="row">
  <%= render 'post', post: @post %>
  <article class="center-block text-center">
    <% if @post.user.id == current_user.id %>
      <%= link_to "Edit Post", edit_post_path(@post) %>
      <%= link_to "Cancel", posts_path %>
    <% else %>
      <%= link_to "Cancel", posts_path %>
    <% end %>
    
  </article>
</section>