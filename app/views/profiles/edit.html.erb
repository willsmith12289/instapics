<%= form_for @user, url: {action: "update"}, html: { multipart: true } do |f| %>
  <div class="row">
    <div class="col-md-12">
      <section class="form-group text-center">
        <h4>Change Your Profile Image:</h4>
        <div class="img-circle">
          <%= profile_avatar_select(@user) %>
        </div>
        <%= f.file_field :avatar, onChange: 'loadFile(event)', class: 'form-control' %>
      </section>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <section class="form-group text-center">
        <h4>Update Your Bio</h4>
        <%= f.text_area :bio, label: false, rows: 4, class: 'form-control' %>
      </section>
    </div>
  </div>
  <div class="form-group text-center">
    <%= f.submit "Update Profile", class: 'btn btn-success' %>
  </div>
<% end %>